<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/blue_gray" />
            <gradient android:angle="-90" android:startColor="@color/blue_gray" android:endColor="@color/blue_gray_light"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/blue_complementary" />
            <solid android:color="@color/blue_variant"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/blue_variant" />
            <gradient android:angle="-90" android:startColor="@color/blue_complementary" android:endColor="@color/blue_variant" />
        </shape>
    </item>
</selector>